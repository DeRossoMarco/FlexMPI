LIBEMPI_DIR=$(HOME)/FlexMPI
PAPI_DIR=
GLPK_DIR=
MPICC=/usr/bin/mpicc


#PAPI=-I$(PAPI_DIR)/include/ -L$(PAPI_DIR)/lib 
#GLPK=-I$(GLPK_DIR)/include/ -L$(GLPK_DIR)/lib/ 

EMPI=-I$(LIBEMPI_DIR)/include/ -L$(LIBEMPI_DIR)/lib/ -I$(LIBEMPI_DIR)/include -lempi -lmpi 
CFLAGS=-Wall -g
MATH= -lm

.PHONY: jacobi
	
jacobi:

	$(MPICC) $(CFLAGS) -o jacobi_IO_V4.o jacobi_IO_V4.c -c $(EMPI) $(PAPI) -lpapi  $(GLPK) -lglpk 
	$(MPICC) $(CFLAGS)  jacobi_IO_V4.o -o jacobi_IO  $(EMPI) $(PAPI) -lpapi $(GLPK) -lglpk 
